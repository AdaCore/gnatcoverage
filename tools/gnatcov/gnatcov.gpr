with "gnatcoll";
project Gnatcov is

   package Compiler is
      for Default_Switches ("ada") use
        ("-gnat05",

         "-gnatwae",
         "-gnatyg",

         "-gnata",

         "-g",
         "-O1",
         "-gnateS",
         "-fpreserve-control-flow");

      for Switches ("ppc_genopc.adb") use ("-g", "-gnat05");
   end Compiler;

   for Source_Dirs use (".", "gnat");
   for Main use ("gnatcov.adb", "ppc_genopc.adb");

end Gnatcov;

