project GNATcov_LLVM_exporter is

    for Languages use ("C++");
    for Source_Dirs use ("src");
    for Main use ("main.cpp");
    for Object_Dir use "obj";
    for Exec_Dir use ".";

    package Builder is
       for Executable ("main.cpp") use "gnatcov_llvm_exporter";
    end Builder;

    package Compiler is
        for Driver ("C") use "gcc";
        for Driver ("C++") use "g++";
    end Compiler;

end GNATcov_LLVM_exporter;
