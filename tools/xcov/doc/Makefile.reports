# This is a simple Makefile helper to build dvi and pdf documents out of
# LaTeX sources for Couverture reports.

PDF=$(REPORT:%=%.pdf)
XCOVDIR=../xcov
all: check clean $(PDF)

check:
	@if [ "$(PDF)" = "" ]; then \
	  echo "no REPORT to make" && exit 1; \
	fi

clean:
	rm -f *.bbl *.aux *.log *.dvi *.blg *.toc *.pdf *~ *.html *.info

.PHONY: force
force:

LATEX=\
TEXINPUTS=.:$(XCOVDIR)/doc:../documents:$${TEXINPUTS} latex
BIBTEX=\
BIBINPUTS=.:$(XCOVDIR)/doc:../documents:../publications:$${BIBINPUTS} bibtex

%.pdf: force
	$(LATEX) $*
	- $(BIBTEX) $* && $(LATEX) $*
	$(LATEX) $*
	dvipdf $*
